<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.zkyr.customviewdemo.MainActivity">

    <com.zkyr.customviewdemo.customview.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text="hhhppp"
        app:textColor="#ff0000"
        app:textSize="40sp"
        android:layout_centerInParent="true"
        android:padding="10dp" />


    <com.zkyr.customviewdemo.customview.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:src="@mipmap/logo"
        app:titleText="hhhhhpppppppppppppppppppppppppppppppppppp"
        app:titleTextColor="#000"
        app:titleTextSize="16sp"
        android:padding="10dp"
        app:imageScaleType="fitXY"
        android:visibility="gone"/>

    <com.zkyr.customviewdemo.customview.CustomProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:firstColor="#0f0"
        app:secondColor="#f00"
        app:circleWidth="10dp"
        app:speed="20"/>

</RelativeLayout>
